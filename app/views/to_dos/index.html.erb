<h1>To Do Lists</h1>
<ul class=no_bullets>
<!-- Created to_dos var outside of block for access in if stmnt  -->
  <% to_dos = ToDo.all %>
  <% to_dos.each do |to_do| %>
  <li><%= link_to(to_do.name,
        controller: 'to_dos', action: 'show', id: to_do.id) %> </li>
  <% end %>
  <% if to_dos.size == 0 %>
  <em>You haven't created any To Do List yet! That's your first To Do!!!</em>
  <% end %>
</ul>

