<h1>To Do</h1>
<ul>
  <% @to_dos.each do |to_do| %>
  <li><%= to_do.name %></li>
  <ul>
    <% to_do.tasks.each do |task| %>
      <li>
        <form action="/tasks/<%= task.id %>" method="post">
          <%= task.name %>
          <input name="_method" type="hidden" value="patch">
          <input name="task[is_done]" type="hidden" value="">
          <input class="mark_done" type="checkbox" value="false">
        </form>
      </li>
    <% end %>
  </ul>

  <% end %>
</ul>
