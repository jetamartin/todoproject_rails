<% if !@to_do.new_record? %>
  <input name="_method" type="hidden" value="patch" />
  <form id="form_id" action="/to_dos/<%= @to_do.id %>" method="post">
    <input name="_method" type="hidden" value="patch" />
<% else %>
  <form id="form_id" action="/to_dos/" method="post">
<% end %>

<div class="form-group">
  <label for="to_do">List Name:</label>
  <input name="to_do[name]" id="to_do" class="form-control" type="text" value="<%=@to_do.name %>">
</div>
<div class="form-group">
  <button type="submit" class="btn">Save List</button>
</div>

<% if @to_do.errors.any? %>
