<h1>Create/Edit task for <%@tasks.todos %></h1>
<div class="container">
  <form>
    <div class="form-group">
      <label for="task_name">Task Name:</label>
      <input id="task_name" class="form-control" type="text">
    </div>
    <div class="form-group">
      <label for="due_date">Due Date:</label>
      <input id="due_date" class="form-control" type="text">
    </div>
    <div class="form-group">
      <label for="completion_date">Completion Date:</label>
      <input id="completion_date" class="form-control" type="text">
    </div>
      <label for="notes">Notes:</label>
      <input id="notes" class="form-control" type="text">
    <div class="form-group">
    <button type="submit" class="btn">Add Task</button>
  </form>
</div>
